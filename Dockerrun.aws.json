{
	"AWSEBDockerrunVersion": 2,
	"containerDefinitions": [
		{
			"name": "client",
			"image": "hemakshis/udemy-docker-multi-client",
			"hostname": "client",
			"essential": false,
			"memory": 128
		},
		{
			"name": "nginx",
			"image": "hemakshis/udemy-docker-multi-nginx",
			"essential": true,
			"memory": 128,
			"portMappings": [
				{
					"hostPort": 80,
					"containerPort": 80
				}
			],
			"links": [
				"client",
				"server"
			]
		},
		{
			"name": "server",
			"image": "hemakshis/udemy-docker-multi-server",
			"hostname": "api",
			"essential": false,
			"memory": 128
		},
		{
			"name": "worker",
			"image": "hemakshis/udemy-docker-multi-worker",
			"essential": false,
			"memory": 128
		}
	]
}